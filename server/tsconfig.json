{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "../dist/server",
        "typeRoots":[
            ".",
            "../node_modules/@types"
        ],
        "types":[
            "node",
            "core-js",
            "express",
            "express-serve-static-core",
            "minimist"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}