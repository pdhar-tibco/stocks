{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "../dist/client",
        "typeRoots": [
            ".",
            "../node_modules/@types",
            "../node_modules/@angular"
        ],
        "types": [
            "core-js",
            "rxjs",
            "router",
            "http",
            "core"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}